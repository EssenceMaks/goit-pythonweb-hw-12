# ============================================
# Файл конфігурації для Contact Management System
# ============================================

# ---- DATABASE CONFIGURATION ----
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@postgres:5432/contacts_db
DB_NAME=contacts_db
DB_USER=postgres
DB_PASSWORD=your_postgres_password
DB_HOST=postgres
DB_PORT=5432

# ---- JWT AUTHENTICATION ----
SECRET_KEY=your_super_secret_key_at_least_32_characters_long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ---- REDIS CONFIGURATION ----
REDIS_URL=redis://redis:6379/0

# ---- EMAIL SETTINGS ----
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_VERIFICATION_ENABLED=True

# ---- CLOUDINARY CONFIGURATION ----
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ---- SUPER ADMIN CREDENTIALS ----
SUPERADMIN_USERNAME=superadmin
SUPERADMIN_PASSWORD=strong_superadmin_password
SUPER_ADMIN_EMAIL=superadmin@example.com

# ---- SECURITY SETTINGS ----
CORS_ORIGINS=["http://localhost", "http://localhost:8000", "http://127.0.0.1:8000"]
RATE_LIMIT_ENABLED=True
MAX_REQUESTS_PER_MINUTE=60

# ---- APPLICATION SETTINGS ----
DEBUG=True
ENVIRONMENT=development  # development, testing, production